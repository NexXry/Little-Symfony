{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class='container my-5 '>
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Descrip</th>
                <th>Numbers of Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.descrip }}</td>
                <td>{{ product.images|length }}</td> 
                <td>
                    <a  class='btn btn-outline-primary my-2' href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a  class='btn btn-outline-secondary my-2' href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class='btn btn-outline-success my-2' href="{{ path('app_product_new') }}">Create new</a>
    </div>
{% endblock %}
