{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
                
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Descrip</th>
                <td>{{ product.descrip }}</td>
            </tr>
            <tr>
                <th>Image</th>
                  {% for item in product.images %}
                <tr> <td>{{ item.name }}</td> </tr>
                {% endfor %}
            </tr>  
            <tr>
                <th>Available Sizes</th>
                {% for item in product.shoesSizes %}
                <tr> <td>{{ item.name }}</td> </tr>
                {% endfor %}
                 {% for item in product.tshirtSizes %}
                <tr> <td>{{ item.name }}</td> </tr>
                {% endfor %}
            </tr>
            <tr>
                <th>Available KeyWords</th>
                {% for item in product.KeyWords %}
                <tr> <td>{{ item.name }}</td> </tr>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
