{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
                
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Descrip</th>
                <td>{{ product.descrip }}</td>
            </tr>
            <tr class='d-inline-flex p-2'>
                <th>Images</th>
                  {% for item in product.images %}
            <td><img width='100px' src="http://localhost:8000/uploads/{{ item.name }}" alt=""></td> 
                {% endfor %}
            </tr>  
            <tr>
            <div class='d-inline-flex p-2'>
             <th>Available Sizes</th>
                {% for item in product.shoesSizes %}
                <td>{{ item.name }}</td> 
                {% endfor %}
                 {% for item in product.tshirtSizes %}
                <td>{{ item.name }}</td> 
                {% endfor %}
            </div>
               
            </tr>
            <tr>
                <th>Available KeyWords</th>
                {% for item in product.KeyWords %}
                <tr> <td>{{ item.name }}</td> </tr>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <div class='container'>
    <a class='btn btn-outline-primary' href="{{ path('app_product_index') }}">back to list</a>

    <a class='btn btn-outline-secondary mx-4' href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
